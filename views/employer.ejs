    font-size: 16px;
    font-weight: bold;
  }
  
  .update-form button {
    background-color: #333;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 3px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  
  .update-form button:hover {
    background-color: #555;
  }
  
  .delete-form button {
    background-color: #f44336;
    color: #fff;
    border: none;
    padding: 5px 10px;
    border-radius: 3px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  
  .delete-form button:hover {
    background-color: #ff6659;
  }
</style>
</head>
