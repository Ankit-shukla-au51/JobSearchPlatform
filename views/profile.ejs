<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <title>Profile Page - Job Search Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="css/styleprofile.css">
</head>

<body>
    <%- include("partials/usernavbar.ejs"); -%>

    <main>
        <section class="profile">
            
                    <div class="container">
                        <div class="profile-header">
                                                        
                             <div class="profile-info">
                                <h1>Welcome, <%= user.fullname %>!</h1>
                                <a href="/editprofile?email=<%= user.email %>">Edit Profile</a>
                            </div>
                        </div>
                    
                    </div>
                
                    <div id="imageUploadForm" style="display:none; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                      
                    </div>
                <div class="profile-body">
                    <div class="section">
                        <h3>Personal Information</h3>
                        <form method="post" action="/profile">
                            <label for="name">Name:</label>
                            <% if (user.fullname) { %>
                                <input type="text" id="name" name="name" value="<%=user.fullname %>" disabled>
                                <%} else { %>
                                 <input type="text" id="name" name="name" value="<%=user.fullname %>" required>
                                <% } %>
                            

                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" value="<%=user.email %>" disabled>
                                
                            <label for="phone">Phone:</label>
                            <% if (userinfo.phone) { %>
                            <input type="tel" id="phone" name="phone" value="<%=userinfo.phone %>" disabled>
                            <%} else { %>
                                <input type="tel" id="phone" name="phone" required>
                                <% } %>
                            
                            <label for="address">Address:</label>
                            <% if (userinfo.address) { %>
                                <input type="text" id="address" name="address" value="<%=userinfo.address %>" disabled>
                            <%} else { %>
                                <input type="text" id="address" name="address" required>
                                <% } %>

                            <h3>Work Experience</h3>

                            <label for="job-title">Job Title:</label>
                            <% if (userinfo) { %>
                                <% if (userinfo.jobtitle) { %>
                                    <input type="text" id="job-title" name="jobtitle"  value="<%=userinfo.jobtitle %>" disabled>
                                 <%}else {%>
                                    <input type="text" id="job-title" name="jobtitle" disabled>
                                   <% } %>
                            <%} else { %>
                                <input type="text" id="job-title" name="jobtitle">
                                <% } %>

                            <label for="company">Company:</label>
                            <% if (userinfo) { %>
                                <% if (userinfo.jobtitle) { %>
                                    <input type="text" id="company" name="company"  value="<%=userinfo.company %>" disabled>
                                 <%}else {%>
                                    <input type="text" id="company" name="company" disabled>
                                   <% } %>
                            <%} else { %>
                                <input type="text" id="company" name="company">
                                <% } %>
                            

                            <label for="location">Location:</label>
                            <% if (userinfo) { %>
                                <% if (userinfo.location) { %>
                                    <input type="text" id="location" name="location"  value="<%=userinfo.location %>" disabled>
                                 <%}else {%>
                                    <input type="text" id="location" name="location" disabled>
                                   <% } %>
                            <%} else { %>
                                <input type="text" id="location" name="location">
                                <% } %>
                            

                            <label for="start-date">Start Date:</label>
                            <% if (userinfo) { %>
                                <% if (userinfo.startDate) { %>
                                    <input type="text" id="start-date" name="startdate"  value="<%=userinfo.startDate %>" disabled>
                                 <%}else {%>
                                    <input type="date" id="start-date" name="startdate" disabled>
                                   <% } %>
                            <%} else { %>
                                <input type="date" id="start-date" name="startdate">
                                <% } %>
                            
                             
                            <label for="end-date">End Date:</label>

                            <% if (userinfo) { %>
                                <% if (userinfo.endDate) { %>
                                    <input type="date" id="end-date" name="enddate" value="<%=userinfo.endDate %>" disabled>
                                 <%}else {%>
                                    <input type="date" id="end-date" name="enddate" disabled>
                                   <% } %>
                            <%} else { %>
                                <input type="date" id="end-date" name="enddate">
                                <% } %>
                            

                            <label for="description">Job Description:</label>
                            <% if (userinfo) { %>
                                <% if (userinfo.jobDesc) { %>
                                    <textarea id="description" name="description" disabled><%=userinfo.jobDesc %></textarea>
                                 <%}else {%>
                                    <textarea id="description" name="description" disabled></textarea>
                                   <% } %>
                            <%} else { %>
                                <textarea id="description" name="description"></textarea>
                                <% } %>

                            <h3>Education</h3>

                            <label for="degree">Degree:</label>
                            <% if (userinfo) { %>
                                <% if (userinfo.degree) { %>
                                    <input type="text id=" degree" name="degree" value="<%=userinfo.degree %>" disabled>
                                 <%}else {%>
                                    <input type="text id=" degree" name="degree" disabled>
                                   <% } %>
                            <%} else { %>
                                <input type="text id=" degree" name="degree">
                                <% } %>
                            

                            <label for="school">School:</label>
                            <% if (userinfo) { %>
                                <% if (userinfo.school) { %>
                                    <input type="text" id="school" name="school"  value="<%=userinfo.school %>" disabled>
                                 <%}else {%>
                                    <input type="text" id="school" name="school" disabled>
                                   <% } %>
                            <%} else { %>
                                <input type="text" id="school" name="school">
                                <% } %>
                            

                            <label for="major">Major:</label>
                            <% if (userinfo) { %>
                                <% if (userinfo.major) { %>
                                    <input type="text" id="major" name="major"  value="<%=userinfo.major %>" disabled>
                                 <%}else {%>
                                    <input type="text" id="major" name="major" disabled>
                                   <% } %>
                            <%} else { %>
                                <input type="text" id="major" name="major">
                                <% } %>
                            

                            <label for="graduation-date">Graduation Date:</label>
                            <% if (userinfo) { %>

                                <% if (userinfo.gradDate) { %>
                                    <input type="date" id="graduation-date" name="graduationdate" value="<%=userinfo.gradDate %>" disabled>
                                 <%}else {%>
                                    <input type="date" id="graduation-date" name="graduationdate" disabled>
                                   <% } %>
                            <%} else { %>
                                <input type="date" id="graduation-date" name="graduationdate">
                                <% } %>
                            

                            <h3>Skills</h3>

                            <label for="skill-1">Skill 1:</label>
                            <% if (userinfo) { %>

                                <% if (userinfo.skill1) { %>
                                    <input type="text" id="skill-1" name="skill1" value="<%=userinfo.skill1 %>" disabled>
                                 <%}else {%>
                                    <input type="text" id="skill-1" name="skill1" disabled>
                                   <% } %>
                            <%} else { %>
                                <input type="text" id="skill-1" name="skill1">
                                <% } %>
                            

                            <label for="skill-2">Skill 2:</label>
                            <% if (userinfo) { %>

                                <% if (userinfo.skill2) { %>
                                    <input type="text" id="skill-2" name="skill2"  value="<%=userinfo.skill2 %>" disabled>
                                 <%}else {%>
                                    <input type="text" id="skill-2" name="skill2" disabled>
                                   <% } %>
                            <%} else { %>
                                <input type="text" id="skill-2" name="skill2">
                                <% } %>
                            

                            <label for="skill-3">Skill 3:</label>
                            <% if (userinfo) { %>

                                <% if (userinfo.skill3) { %>
                                    <input type="text" id="skill-3" name="skill3"  value="<%=userinfo.skill3 %>" disabled>
                                 <%}else {%>
                                    <input type="text" id="skill-3" name="skill3" disabled>
                                   <% } %>
                            <%} else { %>
                                <input type="text" id="skill-3" name="skill3">
                                <% } %>
                            
                            
                            <% if (userinfo) { %>
                                <input type="submit" id="submit-btn" value="submit" disabled>
                            <%} else { %>
                                <input type="submit" id="submit-btn" value="submit">
                                <% } %>
                            
                    </div>
                    </form>
                </div>
            </div>
            </div>
        </section>
    </main>

    <%- include("partials/footer.ejs"); -%>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

</body>

</html>